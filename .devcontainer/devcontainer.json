{
    "name": "Personal RAG Agent",
    "image": "python:3.13",
    "postCreateCommand": "pip install uv && uv pip install -r requirements.txt --system",
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-python.vscode-pylance",
                "charliermarsh.ruff"
            ],
            "settings": {
                "python.defaultInterpreterPath": "/usr/local/bin/python",
                "python.formatting.provider": "charliermarsh.ruff",
                "editor.formatOnSave": true,
                "python.linting.lintOnSave": true,
                "python.languageServer": "Pylance"
            }
        }
    },
    "features": {
        "ghcr.io/devcontainers/features/github-cli:1": {},
        "ghcr.io/devcontainers-contrib/features/pipenv:2": {}
    },
    "remoteEnv": {
        "PYTHONPATH": "${containerWorkspaceFolder}/personal_rag:${containerWorkspaceFolder}"
    }
}